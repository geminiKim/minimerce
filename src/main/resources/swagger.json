{
  "swagger":"2.0",
  "info":{
    "description":"Minimerce is an E-Commerce API Platform.<br/>Provides product registration and ordering, state management, and external API creation.",
    "version":"0.0.1",
    "title":"Swagger Minimerce",
    "contact":{
      "email":"geminikims@gmail.com"
    },
    "license":{
      "name":"Apache 2.0",
      "url":"http://www.apache.org/licenses/LICENSE-2.0.html"
    }
  },
  "host":"localhost:8080",
  "basePath":"/v1",
  "tags":[
    {
      "name":"Order",
      "description":"Order API"
    },
    {
      "name":"Customer",
      "description":"Customer API"
    }],
  "paths":{
    "/orders":{
      "get":{
        "tags":[
          "Order"],
        "summary":"findOrder",
        "operationId":"findOrderUsingGET",
        "consumes":[
          "application/json; charset=UTF-8"],
        "produces":[
          "application/json; charset=UTF-8"],
        "parameters":[
          {
            "name":"orderId",
            "in":"query",
            "description":"orderId",
            "required":false,
            "type":"integer",
            "format":"int64"
          },
          {
            "name":"clientOrderId",
            "in":"query",
            "description":"clientOrderId",
            "required":false,
            "type":"integer",
            "format":"int64"
          }],
        "responses":{
          "200":{
            "description":"OK",
            "schema":{
              "$ref":"#/definitions/OrderResponse"
            }
          }
        }
      },
      "post":{
        "tags":[
          "Order"],
        "summary":"order",
        "operationId":"orderUsingPOST",
        "consumes":[
          "application/json; charset=UTF-8"],
        "produces":[
          "application/json; charset=UTF-8"],
        "parameters":[
          {
            "in":"body",
            "name":"request",
            "description":"request",
            "required":true,
            "schema":{
              "$ref":"#/definitions/OrderRequest"
            }
          }],
        "responses":{
          "200":{
            "description":"OK",
            "schema":{
              "$ref":"#/definitions/OrderResponse"
            }
          }
        }
      }
    }
  },
  "securityDefinitions":{
    "api-key":{
      "type":"apiKey",
      "name":"minimerce-api-key",
      "in":"header"
    }
  },
  "definitions":{
    "OrderResponse":{
      "type":"object",
      "required": [ "data", "result" ],
      "properties":{
        "data":{
          "type":"object"
        },
        "result":{
          "$ref":"#/definitions/ApiResult"
        }
      }
    },
    "ApiResult":{
      "type":"object",
      "required": [ "code", "isError", "message", "status" ],
      "properties":{
        "code":{
          "type":"integer",
          "format":"int32",
          "default":200
        },
        "isError":{
          "type":"boolean",
          "default":false
        },
        "message":{
          "type":"string",
          "default":"OK"
        },
        "status":{
          "type":"integer",
          "format":"int32",
          "default":200
        }
      }
    },
    "OrderRequest":{
      "type":"object",
      "required": [ "clientOrderId", "customerId", "price", "orderedAt", "details" ],
      "properties":{
        "clientOrderId":{
          "type":"integer",
          "format":"int64",
          "default":1
        },
        "customerId":{
          "type":"integer",
          "format":"int64",
          "default":1
        },
        "price":{
          "type":"integer",
          "format":"int32",
          "default":10000
        },
        "orderedAt":{
          "type":"string",
          "format":"date-time",
          "default":"1992-05-30 00:00:00"
        },
        "details":{
          "type":"array",
          "items":{
            "$ref":"#/definitions/OrderRequestDetail"
          }
        }
      }
    },
    "OrderRequestDetail":{
      "type":"object",
      "required": [ "dealId", "optionId", "price", "quantity", "unitPrice" ],
      "properties":{
        "dealId":{
          "type":"integer",
          "format":"int64",
          "default":1
        },
        "optionId":{
          "type":"integer",
          "format":"int64",
          "default":1
        },
        "price":{
          "type":"integer",
          "format":"int32",
          "default":10000
        },
        "quantity":{
          "type":"integer",
          "format":"int32",
          "default":1
        },
        "unitPrice":{
          "type":"integer",
          "format":"int32",
          "default":10000
        }
      }
    }
  }
}
